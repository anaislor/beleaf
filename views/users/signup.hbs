<div id="content_signup">
  <div id="signup">
    <h1 class="title_signup">SIGN UP</h1>

    {{#if msg}}
    <p class="errormessage">{{msg}}</p>
    {{/if}}

    <div id="form">
      <form class="form" action="/signup" method="post" enctype="multipart/form-data">
        {{!-- <label class="label" for="name">Name</label> --}}
        <input class="input_signup" id="name" type="text" name="name" required placeholder="name">
        {{!-- <label class="label" for="email">Email</label> --}}
        <input class="input_signup" id="email" type="email" name="email" required placeholder="email">
        {{!-- <label class="label" for="password">Password</label> --}}
        <input class="input_signup" id="password" type="password" name="password" required placeholder="password">
        {{!-- <label class="label" for="avatar">Avatar</label> --}}
        <input class="input_signup" id="avatar" type="file" name="avatar">
        <button class="button_signup">Create an account</button>
      </form>
    </div>
  </div>
</div>